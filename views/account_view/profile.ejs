<div class="container-fluid">
  <div class="row">
    <div class="col-md-12">

      <!-- Profile Image -->
      <div class="card card-primary card-outline">
        <div class="card-body box-profile">
          <div class="text-center">
            <img class="profile-user-img img-fluid img-circle"
                 src="../../dist/img/user4-128x128.jpg"
                 alt="User profile picture">
          </div>

          <h3 class="profile-username text-center"><%= account.User.fullname %></h3>

          <p class="text-muted text-center"><%= account.Role.name %></p>

          <ul class="list-group list-group-unbordered mb-3">
            <li class="list-group-item">
              <b>Accound ID: </b> <a class="float-right"><%= account.id %></a>
            </li>
            <li class="list-group-item">
              <b>Username</b> <a class="float-right"><%= account.username %></a>
            </li>
            <li class="list-group-item">
              <b>Password</b> <a class="float-right"><%= account.password %></a>
            </li>
          </ul>

          <!-- <a href="#" class="btn btn-primary btn-block"><b>Follow</b></a> -->
        </div>
        <!-- /.card-body -->
      </div>
      <!-- /.card -->

      <!-- About Me Box -->
      <div class="card card-primary">
        <div class="card-header">
          <h3 class="card-title">About Me</h3>
        </div>
        <!-- /.card-header -->
        <div class="card-body">
          <strong><i class="fas fa-envelope mr-1"></i> Email</strong>

          <p class="text-muted">
            <%= account.User.email %>
          </p>

          <hr>

          <strong><i class="fas fa-birthday-cake mr-1"></i> Age</strong>

          <p class="text-muted"><%= account.User.age %></p>

          <hr>

          <% if(account.Role.name === 'trainer' || account.Role.name === 'trainingStaff'){ %>
            <strong><i class="fas fa-map-marker-alt mr-1"></i> Address</strong>

            <p class="text-muted"><%= account.User.address %></p>
            <hr>
          <% } %>

          <% if(account.Role.name === 'trainer'){ %>
            <strong><i class="fas fa-pencil-alt mr-1"></i> Specialty</strong>

            <p class="text-muted"><%= account.User.specialty %></p>
            <hr>
          <% } %>

          <% if(account.Role.name === 'trainee'){ %>
            <strong><i class="fas fa-book mr-1"></i> Education</strong>

            <p class="text-muted"><%= account.User.education %></p>
            <hr>
          <% } %>
          
        </div>
        <!-- /.card-body -->
      </div>
      <!-- /.card -->
    </div>
  </div>
</div>