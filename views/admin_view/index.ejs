        <a href="/admin/createTrainer">
          <button type="button" class="btn btn-primary btn-sm">
            <i class="fas fa-plus-circle"></i> Trainer account
          </button>
        </a><br></br>
        <div class="table-responsive">
          <table
            class="table table-bordered"
            id="dataTable2"
            width="100%"
            cellspacing="0"
          >
