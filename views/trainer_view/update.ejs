<div class="container-fluid">
  
    
  <form action="/trainer/editTrainer" method="POST">
    
    <div class="mb-3" style="display: none">
      <label for="exampleInputPassword1" class="form-label">Id</label>
      <input
        type="text"
        class="form-control"
        id="exampleInputPassword1"
        name="id"
        value="<%= trainer.id %>"
        required
      />
    </div>

    <div class="mb-3">
      <label for="exampleInputPassword1" class="form-label">Fullname</label>
      <input
        type="text"
        class="form-control"
        id="exampleInputPassword1"
        name="fullname"
        value="<%= trainer.fullname %>"
        required
      />
    </div>

    <div class="mb-3">
      <label for="exampleInputPassword1" class="form-label"
        >Specialty</label
      >
      <input
        type="text"
        class="form-control"
        id="exampleInputPassword1"
        name="specialty"
        value="<%= trainer.specialty %>"
        required
      />
    </div>

    <div class="mb-3">
      <label for="exampleInputPassword1" class="form-label"
        >Age</label
      >
      <input
        type="age"
        class="form-control"
        id="exampleInputPassword1"
        name="age"
        value="<%= trainer.age %>"
        required
      />
    </div>
    
    <div class="mb-3">
      <label for="exampleInputPassword1" class="form-label">Address</label>
      <input
        type="text"
        class="form-control"
        id="exampleInputPassword1"
        name="address"
        value="<%= trainer.address %>"
        required
      />
    </div>

    <div class="mb-3">
      <label for="exampleInputPassword1" class="form-label">Email</label>
      <input
        type="email"
        class="form-control"
        id="exampleInputPassword1"
        name="email"
        value="<%= trainer.email %>"
        required
      />
    </div>

    <button type="submit" class="btn btn-primary">Submit</button>
  </form>



</div>